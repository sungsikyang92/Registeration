<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.testapp.registeration">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="앵송식"
        android:supportsRtl="true"
        android:theme="@style/Theme.Registeration.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="com.testapp.registeration.Splashscreen"
            android:label="앵송식">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.testapp.registeration.MainActivity"></activity>
        <activity android:name="com.testapp.registeration.RegisterActivity" />
        <activity android:name="com.testapp.registeration.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.testapp.registeration.Pop"
            android:theme="@style/Theme.AppCompat.Pop"></activity>
    </application>

</manifest>